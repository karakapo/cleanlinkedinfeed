{
  "manifest_version": 3,
  "name": "LinkedIn Feed Cleaner",
  "version": "1.0.0",
  "description": "LinkedIn feed'inizdeki düşük kaliteli içerikleri otomatik filtreler",
  "author": "Your Name",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content/content-script.js"],
      "css": ["content/content-style.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LinkedIn Feed Cleaner"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["models/*", "utils/classifier.js", "utils/onnxruntime-web.min.js"],
      "matches": ["https://www.linkedin.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}

